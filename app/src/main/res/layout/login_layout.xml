<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reg_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="20dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="Вход"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/login_login_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Логин"
        android:inputType="textPersonName"
        android:maxLength="15" />

    <TextView
        android:id="@+id/login_login_error_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/error_decor"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:text="error"
        android:textColor="@android:color/white"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/login_pass_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:maxLength="20" />

    <TextView
        android:id="@+id/login_pass_error_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/error_decor"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:text="error"
        android:textColor="@android:color/white"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/login_global_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:text="Неправильный логин или пароль"
        android:textColor="@android:color/holo_red_light"
        android:visibility="gone" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp">

        <Button
            android:id="@+id/submit_login_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@drawable/ripple"
            android:gravity="center"
            android:text="Войти"
            android:textColor="@android:color/white" />
    </android.support.v7.widget.CardView>


</LinearLayout>